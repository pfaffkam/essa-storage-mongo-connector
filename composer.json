{
    "name": "pfaffkit/essa-storage-mongo-connector",
    "description": "Mongo connector for ESSA",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Kamil Pfaff",
            "email": "kamil@pfaff.app"
        }
    ],
    "require": {
        "php": "^8.4",
        "pfaffkit/essa": "*",
        "ext-mongodb": "^2.0",
        "mongodb/mongodb": "^2.0"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../core"
        }
    ],
    "autoload": {
        "psr-4": {
            "PfaffKIT\\Essa\\Adapters\\StorageMongo\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PfaffKIT\\Essa\\Adapters\\StorageMongo\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "11.5"
    }
}
